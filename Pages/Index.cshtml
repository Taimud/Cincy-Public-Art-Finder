@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Cincy Public Art Finder Mockups</h1>
    <p>This page shows the mockups for our project.</p>
</div>

<section class="container">

    <div class="mb-5">
        <h3>Homepage Mockup</h3>
        <img src="~/images/home-page-mockup.png"
             class="img-fluid rounded shadow-sm"
             alt="Mockup of the Art Finder homepage, showing a map with art locations." />
    </div>

    <div class="mb-5">
        <h3>Art Detail Page Mockup</h3>
        <img src="~/images/art-detail.png"
             class="img-fluid rounded shadow-sm"
             alt="Mockup of the art detail page, showing artwork, description, and community comments." />
    </div>

    <div class="mb-5">
        <h3>Walking Tours Page Mockup</h3>
        <img src="~/images/walking-tour.png"
             class="img-fluid rounded shadow-sm"
             alt="Mockup of the walking tours page, showing filters for weather and time." />
    </div>

</section>

